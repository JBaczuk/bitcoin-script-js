{
  "name": "bitcoin-script-js",
  "version": "1.0.0",
  "description": "Bitcoin script interpreter written in javascript for browsers and node.js",
  "main": "index.js",
  "dependencies": {
    "bitcoin-ops": "1.4.1",
    "bscript-parser": "git+https://git@github.com/jbaczuk/bscript-parser.git"
  },
  "devDependencies": {
    "browserify": "^16.2.3",
    "chai": "^4.2.0",
    "eslint": "^5.10.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "karma": "^3.1.4",
    "karma-browserify": "^6.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^2.0.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-safari-launcher": "^1.0.0",
    "watchify": "^3.11.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0"
  },
  "scripts": {
    "test": "nyc mocha --recursive --require ./test/globals ./test/unit/*.test.js --exit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "browser-test": "karma start karma.conf.js --log-level debug --single-run"
  },
  "nyc": {
    "include": [
      "src/*.js",
      "src/**/*.js"
    ],
    "all": true,
    "reporter": [
      "lcov",
      "text",
      "html",
      "json-summary"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JBaczuk/bitcoin-script-js.git"
  },
  "keywords": [
    "bitcoin",
    "script",
    "interpreter",
    "browser",
    "node"
  ],
  "author": "Jordan Baczuk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JBaczuk/bitcoin-script-js/issues"
  },
  "homepage": "https://github.com/JBaczuk/bitcoin-script-js#readme"
}
